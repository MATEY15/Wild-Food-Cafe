include ../libs/bemto/bemto.pug

block variable

mixin navMenu(name, link)
	+e.LI.__li
		+e.A(href=link).__link=name

mixin links(name, price, link)
	+e.A(href=link)&attributes(attributes)= name

mixin product(name, price, linkImg, link)
	+b.DIV.product-items_
		+e.A(href=link).__images
			img(src=linkImg, alt="")
		+e.A(href=link).__name=name
		+e.SPAN.__date=price

mixin productBS(name, price, linkImg, link)
	+b.DIV.product-items_
		+e.A(href=link).__images
			img(src=linkImg, alt="")
			span.__best-seller BEST SELLER
		+e.A(href=link).__name=name
		+e.SPAN.__date=price

