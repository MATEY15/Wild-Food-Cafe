.container
	box-sizing border-box
	max-width 1160px
	width 100%
	padding-left 10px
	padding-right 10px
	margin 0 auto

.container-big
	max-width 1280px
	width 100%
	padding-left 10px
	padding-right 10px
	margin 0 auto

.container-full
	max-width 1800px
	width 100%
	padding-left 20px
	padding-right 20px
	margin 0 auto

h3.heading-section__blue,
h3.heading-section__white
	ffa(JournalSansNew-Bold)
	font-size 28px
	text-transform uppercase
	ls(2px)
	a
		c cBlueDark
		text-decoration none
h3.heading-section__blue
	c cBlueDark
h3.heading-section__white
	c cWhite

h3.heading-small__blue,
h3.heading-small__white
	ffa(JournalSansNew-Bold)
	font-size 18px
	text-transform uppercase
	ls(2px)
	a
		c cBlueDark
		text-decoration none
h3.heading-small__blue
	c cBlueDark
h3.heading-small__white
	c cWhite


.link-back
	font-size 14px
	ffa(JournalSansNew-Display)
	ls(1.75px)
	c cBlueDark
	text-decoration none
	text-transform uppercase

.default-menu
	.default-list
		&__li
			display inline-block
		&__li:not(:last-child)
			margin-right 40px
		&__link
			font-size 14px
			ffa(JournalSansNew-Display)
			ls(1.75px)
			c cBlueDark
			text-transform uppercase

.wrap__share-social
	position relative
	text-align center
	&:before
		position absolute
		top 50%
		left 0
		display block
		content ""
		width 100%
		height 4px
		background: gradient
.share-social
	position relative
	display inline-block
	background: cWhite
	padding-left 30px
	padding-right 30px
	@media screen and (max-width: 414px)
		padding-left 20px
		padding-right 20px
	.share-center
		display flex
		flex-direction row
		align-items center
	span
		display inline-block
		font-size 18px
		ffa(JournalSansNew-Display)
		ls(2.5px)
		text-transform uppercase
		c cBlueDark
		padding-right 12px
	
	&__list
		display inline-block
		li
			display inline-block
			a
				display flex
				flex-direction row
				align-items center
				background: cBlueDark
				c cWhite
				padding 5px
				text-decoration none
				svg
					fill cWhite
					width 24px
					height 24px
				span
					display inline-block
					margin-left 10px
					c cWhite
					padding-right 0