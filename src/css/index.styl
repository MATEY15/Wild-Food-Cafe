@import ("../../libs/template/reset.css")
@import ("../../libs/template/lib")
@import ("../../libs/template/media")

@import ("libs/*.css")
@import ("fonts")
@import ("blocks/**/**")

*
	box-sizing border-box

html
	height 100%

body
	position relative
	overflow-x: hidden
	min-width 320px
	background: cWhite
	font-family: JournalSansNew
	min-height 100%
	&.overflow
		overflow hidden

#overlayer
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index 11
	background cBlack

.align-right
	float right
.align-left
	float left

p
	font-size 16px
	ffa(JournalSansNew)
	lh(24px)
	ls(1.25px)
	c cBlueDark

.line-gradient
	height 4px
	width 100%
	background: gradient

