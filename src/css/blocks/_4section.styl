.section--school
	position relative
	background-image: url(../img/background-school.jpg)
	background-repeat no-repeat
	background-size cover
	background-position: center 0
	padding-top 70px
	padding-bottom 70px
	min-height 800px
	@media screen and (max-width: 1180px)
		padding-left 20px
		padding-right 20px
	@media screen and (max-width: 854px)
		background-position: center
	@media screen and (max-width: 768px)
		min-height 640px
	.heading-section__white
		@media screen and (max-width: 480px)
			text-align center
	.school-content
		display flex
		flex-direction column
		align-items center
		padding-top 200px
		@media screen and (max-width: 768px)
			padding-top 140px
		@media screen and (max-width: 480px)
			padding-top 120px
		@media screen and (max-width: 360px)
			padding-top 80px
		&__text
			c cWhite
			text-align center
			max-width 470px
			h3
				font-size 24px
				ffa(JournalSansNew-Bold)
				margin-bottom 50px
				ls(2.8px)
			p
				position relative
				font-size 16px
				lh(22px)
				ls(2px)
				ffa(JournalSansNew)
				&:before
					position absolute
					display block
					content "-"
					top -30px
					left 50%
					tt(-50%, 0)
		.list-school
			position absolute
			bottom 90px
			left 0
			width 100%
			text-align center
			@media screen and (max-width: 768px)
				bottom 50px
			li
				display inline-block
				&:not(:last-child)
					margin-right 40px
					@media screen and (max-width: 768px)
						margin-right 20px
					@media screen and (max-width: 600px)
						margin-right 15px
				a
					c cWhite
					font-size 16px
					ffa(JournalSansNew-Display)
					ls(2px)
					@media screen and (max-width: 768px)
						font-size 14px
					@media screen and (max-width: 600px)
						font-size 12px