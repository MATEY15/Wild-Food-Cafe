.section--about
	padding-top 80px
	padding-bottom 70px
	@media screen and (max-width: 768px)
		padding-top 60px
		padding-bottom 60px
.about-wrapper
	display flex
	@media screen and (max-width: 768px)
		flex-direction column
	.about-images
		position relative
		margin-right 20px
		flex-basis 320px
		min-width 380px
		min-height 470px
		@media screen and (max-width: 768px)
			min-height auto
			max-width 380px
			margin 0 auto 20px
		@media screen and (max-width: 413px)
			min-width 300px
		&:before
			position absolute
			top 20px
			left -24px
			height 5px
			width 220px
			content ""
			background linear-gradient(to right, rgba(172,126,182,1) 0%,rgba(241,146,188,1) 19%,rgba(254,203,75,1) 35%,rgba(254,242,138,1) 55%,rgba(161,209,173,1) 73%,rgba(125,185,232,1) 100%)
			z-index 1

		&__img
			position relative
			overflow hidden
			width 100%
			height 100%
			max-height 560px
			@media screen and (max-width: 768px)
				height 560px
			@media screen and (max-width: 413px)
				height 470px
			img
				position absolute
				top 50%
				left 50%
				height 100%
				width auto
				tt(-50%, -50%)
	.about-content
		background: cBlueLight
		c cBlueDark
		padding 50px 75px
		@media screen and (max-width: 1024px)
			padding: 40px 30px
		@media screen and (max-width: 414px)
			max-height 400px
			overflow-y scroll
		h3
			margin-bottom 20px
		p
			font-size 16px
			ffa(JournalSansNew)
			lh(24px)
			ls(2px)
			&:not(:last-child)
				margin-bottom 24px