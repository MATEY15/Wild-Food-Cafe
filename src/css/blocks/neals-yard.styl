.post-events
	padding-top 70px
	padding-bottom 70px

.menu-category
	text-align right
	margin-bottom 50px

.post-big
	&__wrapper
		display flex
		flex-direction row
		justify-content space-between
	
	.line-gradient
		margin-top 70px
		margin-bottom 70px
	
	&__images,
	&__content
		width 50%
	
	&__images
		padding-right 70px
		padding-top 10px
		img
			width 100%
	
	&__content
		p
			font-size 17px
	
	&__heading
		ffa(JournalSansNew-Bold)
		font-size 28px
		text-transform uppercase
		ls(2px)
		lh(36px)
		c cBlueDark
		margin-bottom 20px
	
	&__date
		ffa(JournalSansNew)
		font-size 16px
		font-weight normal
		text-transform uppercase
		margin-left 14px

.post-small
	display flex
	flex-direction row
	flex-wrap wrap
	margin 0 -40px
	
	&__items
		width 33.3%
		padding 0 40px
		text-align center
		c cBlueDark
		margin-bottom 40px
	
	&__images
		position relative
		display block
		width 100%
		min-height 220px
		overflow hidden
		margin-bottom 40px
		img
			position absolute
			top 50%
			left 50%
			width 100%
			height auto
			tt(-50%, -50%)
	
	&__heading
		font-size 24px
		text-transform uppercase
		ls(2.5px)
		margin-bottom 20px
		a
			c cBlueDark
			text-decoration none
	
	&__date
		display block
		margin-bottom 20px

.read-arrow
	text-align center
	.read-arrow__icon
		position relative
		display block
		width 24px
		height 18px
		margin 0 auto
		&:before
			position absolute
			top 0
			left 0
			display block
			content ''
			width 14px
			height 22px
			background-image: url(../img/slide-arrow.svg)
			background-repeat no-repeat
			transform rotateZ(-90deg)
		