.footer
	min-height 120px
	background cWhite
	padding-top 28px
	.flex-wrapper
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		@media screen and (max-width: 540px)
			flex-direction column
	&-left
		display flex
		align-items center
		@media screen and (max-width: 540px)
			flex-direction column
.logo-foot
	margin-right 110px
	@media screen and (max-width: 854px)
		margin-right 50px
	@media screen and (max-width: 640px)
		margin-right 30px
	@media screen and (max-width: 540px)
		margin-right 0
		margin-bottom 20px

.nav-footer
	display inline-block
	&__list
		text-align left
	&__list-li
		display inline-block
		@media screen and (max-width: 540px)
			display block
			text-align center
			&:not(:last-child)
				margin-bottom 34px
		&:not(:last-child)
			margin-right 54px
			@media screen and (max-width: 640px)
				margin-right 30px
			@media screen and (max-width: 540px)
				margin-right 0
		a
			font-family: fPoppinsSemiBold
			font-size 15px
			color: rgba(42, 41, 41, 0.5)
			text-decoration none
			transition all .25s ease-out
			&:hover
				color: rgba(42, 41, 41, 0.8)

.copyright
	font-family: fPoppinsSemiBold
	font-size 15px
	color: rgba(42, 41, 41, 0.5)
	@media screen and (max-width: 540px)
		margin-top 50px
		margin-bottom 20px