headerRowWidth = 775px // variable

.header
	padding-top 32px
	position relative
	height: headerRowWidth
	background-size cover !important
	background-position center 0 !important
	background-repeat no-repeat !important
	// background rgb(49,88,211)
	// background -moz-linear-gradient(top, rgba(49,88,211,1) 0%, rgba(80,119,241,1) 100%)
	// background -webkit-linear-gradient(top, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
	// background linear-gradient(to bottom, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
	@media screen and (max-width: 720px)
		padding-top 20px
	section
		position relative
		@media screen and (max-width: 720px)
			position initial
	@media screen and (max-width: 600px)
		height 667px
	
	.top-line
		position relative
		z-index 10
	
	.flex-wrapper
		display flex
		justify-content space-between
		align-items center

.bg-header
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-size cover !important
	background-position center 0 !important
	background-repeat no-repeat !important
	opacity .1

.logo-top
	&__link
		display inline-block
		text-decoration none
		font-family: fPoppinsBold
		font-size 21px
	&__img
		margin-right 19px
	&__name
		display inline-block
		vertical-align top
		margin-top 15px
		color cWhite

.menu-header
	&.is-active
		visibility visible
		opacity 1
		transition all .25s ease-out
	@media screen and (max-width: 720px)
		position fixed
		top 0
		left 0
		display flex
		align-items center
		justify-content center
		width 100%
		height 100%
		background rgb(49,88,211)
		background -moz-linear-gradient(top, rgba(49,88,211,1) 0%, rgba(80,119,241,1) 100%)
		background -webkit-linear-gradient(top, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
		background linear-gradient(to bottom, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
		visibility hidden
		opacity 0
		
	.nav-top
		&__list
			text-align right
			@media screen and (max-width: 720px)
				text-align center
		&__list-li
			display inline-block
			&:not(:last-child)
				margin-right 54px
				@media screen and (max-width: 720px)
					margin-right 0
					display block
					margin-bottom 30px
			a
				color: cWhite
				font-size 15px
				text-decoration none
				@media screen and (max-width: 720px)
					font-size 25px
					

.burger-menu
	position relative
	display none
	cursor pointer
	width 22px
	height 16px
	outline none
	@media screen and (max-width: 720px)
		display block
		z-index 10
	span
		display block
		height 2px
		width 22px
		margin-bottom 5px
		background: cWhite
		&:last-child
			margin-bottom 0

.header-content
	display flex
	flex-direction row
	align-items center
	height calc(100% - 64px)
	text-align center
	color: cWhite
	@media screen and (max-width: 480px)
		text-align left
		align-items flex-start
		padding-top 50px
	&__heading
		font-size 48px
		line-height 58px
		c cWhite
		margin-bottom 12px
		@media screen and (max-width: 600px)
			font-size 40px
		@media screen and (max-width: 720px)
			br
				display none
		@media screen and (max-width: 500px)
			br
				display none
		@media screen and (max-width: 480px)
			max-width 355px
		@media screen and (max-width: 320px)
			font-size 30px
	&__paragraph
		font-size 18px
		line-height 26px
		margin-bottom 25px
		@media screen and (max-width: 600px)
			font-size 15px
		@media screen and (max-width: 414px)
			br
				display none

.header-blog
	position relative
	height 100%
	@media screen and (max-width: 600px)
		height 98%
	&:before
		position absolute
		top 0
		left 0
		content ''
		display block
		width 100%
		height 500px
		background rgb(49,88,211)
		background -moz-linear-gradient(top, rgba(49,88,211,1) 0%, rgba(80,119,241,1) 100%)
		background -webkit-linear-gradient(top, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
		background linear-gradient(to bottom, rgba(49,88,211,1) 0%,rgba(80,119,241,1) 100%)
		@media screen and (max-width: 600px)
			height 98%
	img
		position relative
		max-width 100%
	.images-blog
		position relative
		height 550px
		width 100%
		max-width 1140px
		overflow hidden
		margin 100px auto 0
		@media screen and (max-width: 600px)
			margin-top 16px
			height 480px
		.container
			@media screen and (max-width: 600px)
				padding-left 0
				padding-right 0
			img
				position absolute
				top 50%
				left 50%
				height 100%
				width auto
				max-width none
				transform translate(-50%, -50%)
				font-size 0