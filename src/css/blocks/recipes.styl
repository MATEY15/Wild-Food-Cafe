.section--recipes
	padding-top 40px
	padding-bottom 40px
	
	.recipes-head
		display flex
		flex-direction row
		justify-content space-between
		flex-wrap wrap
		align-items flex-end
		margin-bottom 40px
		
		&__back,
		&__name,
		&__menu
			width 33.3%
		
		&__back
			@media screen and (max-width: 853px)
				order 2
				width auto
			@media screen and (max-width: 480px)
				width 100%
				margin-bottom 16px
				text-align center
		
		&__name
			text-align center
			@media screen and (max-width: 853px)
				width 100%
				order 1
				margin-bottom 20px
		
		&__menu
			text-align right
			@media screen and (max-width: 853px)
				order 3
				width auto
			@media screen and (max-width: 480px)
				width 100%
				text-align center
	
	.recipes-slide
		position relative
		
		.item
			display flex
			flex-direction column
			align-items center
		
		.recipes-item
			text-align center
			c cBlueDark
			max-width 255px
			margin-left auto
			margin-right auto
			&:not(:last-child)
				margin-bottom 30px
			&__images
				position relative
				display block
				min-height 180px
				width 100%
				margin-bottom 20px
				overflow hidden
				img
					position absolute
					top 50%
					left 50%
					width 100%
					height auto
					tt(-50%, -50%)
			
			&__name
				display block
				font-size 20px
				ffa(JournalSansNew-Bold)
				ls(2px)
				lh(24px)
				text-decoration none
				c cBlueDark
				margin-bottom 16px
			
			&__date
				font-size 12px

		.owl-dots
			display none
		.owl-nav
			position absolute
			top 50%
			margin-top -30px
			width 100%
		.owl-prev,
		.owl-next
			position absolute
			display flex
			span
				font-size 0
				display inline-block
				width 20px
				height 30px
				background url(../img/slide-arrow.svg) !important
				background-repeat no-repeat !important
		.owl-next
			right -50px
			@media screen and (max-width: 1240px)
				background: rgba(255, 255, 255, 0.8)!important
				width 50px
				height 50px
				right 20px
				justify-content center
				br(50%)
				span
					margin-left 5px
			@media screen and (max-width: 992px)
				right 20px
			@media screen and (max-width: 480px)
				right 0
			@media screen and (max-width: 375px)
				width 22px
				background none
			span
				transform rotateY(180deg)
		.owl-prev
			left -50px
			@media screen and (max-width: 1240px)
				background: rgba(255, 255, 255, 0.8)!important
				width 50px
				height 50px
				left 20px
				justify-content center
				br(50%)
				span
					margin-right 5px
			@media screen and (max-width: 992px)
				left 20px
			@media screen and (max-width: 480px)
				left 0
			@media screen and (max-width: 375px)
				width 22px
				background none

/* Post */

.recipes-post
	display flex
	flex-direction row
	justify-content space-between
	@media screen and (max-width: 720px)
		flex-direction column

.wrapper__recipes-post
	position relative
	display flex
	flex-direction column
	align-items center
	width 60%
	padding-left 40px
	padding-right 40px
	padding-bottom 70px
	@media screen and (max-width: 720px)
		width 100%
		order 2
	@media screen and (max-width: 414px)
		padding-left 20px
		padding-right 20px
	
	.recipes__post-content
		width 100%
	
	.post-content
		max-width 600px
		text-align center
		font-size 18px
		margin 0 auto
	
	.recipes-post-head
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		width 100%
		padding-top 40px
		margin-bottom 70px
		@media screen and (max-width: 720px)
			margin-bottom 20px
		
		&__name
			width 100%
			text-align center
			margin-bottom 30px
			@media screen and (max-width: 720px)
				margin-bottom 16px
		
	.recipes__heading
		c cBlueDark
		text-align center
		margin-bottom 30px
		h1
			ffa(JournalSansNew-Bold)
			font-size 28px
			text-transform uppercase
			ls(2px)
			c cBlueDark
			margin-bottom 30px
			@media screen and (max-width: 414px)
				br
					display none
		
		p
			font-size 16px
			ffa(JournalSansNew)
			text-transform uppercase
			ls(1px)

.wrapper__recipes-images
	width 40%
	min-height 100vh
	@media screen and (max-width: 720px)
		width 100%
		min-height 400px
		order 1
	@media screen and (max-width: 414px)
		min-height 320px
	.recipes-images__full
		position relative
		display flex
		flex 1
		height 100%
		overflow hidden
		@media screen and (max-width: 720px)
			height 400px
		@media screen and (max-width: 414px)
			height 320px
		img
			position absolute
			top 50%
			left 0
			height 100%
			width auto
			tt(0, -50%)
			@media screen and (max-width: 720px)
				width 100%
				height auto

.share-post
	position absolute
	bottom 20px
	left 0
	width 100%
	padding-left 40px
	padding-right 40px
	@media screen and (max-width: 414px)
		padding-left 20px
		padding-right 20px