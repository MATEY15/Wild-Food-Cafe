		path.shape-overlays__path
		path.shape-overlays__path
		path.shape-overlays__path

	+b.MAIN.section_main
		//- +b.SECTION.shop-view_
		+b.SECTION.product-all_
			.container
				.product-all__wrapper
					include include/filter-cart

					.main-product
						.cart-wrapper.gradient-border
							form.delivery-wrapper

								.delivery-wrapper__items
									h3 BILLING DETAILS
									.delivery-forms
										.delivery-forms-100
											.height-20
										.delivery-forms-50
